<view  class="page">

	<view class="page-title">请在此输入您的问题：</view>

	<form bindsubmit="handleFormSubmit">
		<view class="section">
			<textarea bindinput="handleTextareaInput" auto-focus="true" maxlength="200" placeholder="please input here" value='{{quesContent}}'/>
		</view>

		<view class="section section_gap">
			<image bindtap="uploadFile" mode="widthFix" src="../../images/icon-camera.png"></image>
			<text>{{restNum}}字</text>
		</view>

		<view class="btn-area">
			<button type="default" formType="submit">提交</button>
		</view>

	</form>
</view>
