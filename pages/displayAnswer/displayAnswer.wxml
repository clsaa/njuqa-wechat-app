<!--question.wxml-->
<view class="container">
    <view class="question-wrp">
        <view class="question-item">
            <view class="que-title">
                <!--显示对应的问题内容, questionItem.content-->
                {{questionItem.content}}
            </view>
            <view class="que-content">
                <!--显示对应的用户名, userinfo.nickname-->
            </view>
            <view class="que-follow">
                <view class="left">
                    <view class="watch">
                        <image src="../../images/eye.png"></image>
                        <text>3316</text>
                    </view>
                    <view class="comment">
                        <image src="../../images/comment2.png"></image>
                        <text>27</text>
                    </view>
                </view>
                <view class="right" bindtap="AttentionFunction">
                    关注用户
                </view>
            </view>
          
        </view>
    
        <view class="que-operate flex-wrp">
            <view class="write flex-item" bindtap="bindAnswerItemTap">
                <image src="../../images/write.png"></image>
                <text>写回答</text>
            </view>
        </view>
    </view>
    <view class="answer-feed" wx:for="{{answers}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}" wx:key="{{item.index}}">
        <view  bindtap="" class="feed-item">
            <view class="feed-source">
                <a class="" bindTap="">
                    <view class="avatar">
                        <image src="{{userinfo.avatarUrl}}"></image>
                    </view>
                    <text>{{userinfo.nickname}}</text>
                </a>
            </view>
            <view class="feed-content">
                <view class="answer-body">
                    <view>
                        <text class="answer-txt">{{item.content}}</text>
                    </view>
                    <view class="answer-actions">
                        <view class="comments dot" id = "{{idx}}" bindtap="CommentAnswer">
                            <a> 评论 </a>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

